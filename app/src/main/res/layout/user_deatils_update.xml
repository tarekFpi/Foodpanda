<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:elevation="20dp"
    app:cardElevation="20dp"
    app:cardCornerRadius="15dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:padding="15dp"
            android:background="@drawable/layout_design"
            android:textColor="#1B191B"
            android:hint="Phone Number"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/editUpdate_userPhone"/>

    <EditText
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="15dp"
        android:background="@drawable/layout_design"
        android:textColor="#1B191B"
        android:hint="Area"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editUpdate_userPhone"
        android:id="@+id/edit_update_area"/>

    <EditText
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/layout_design"
        android:padding="15dp"
        android:textColor="#1B191B"
        android:hint="Flat No,Bullidng"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="350dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_update_area"
        android:id="@+id/edit_update_flat_id"/>

    <LinearLayout
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/edit_update_flat_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <info.hoang8f.widget.FButton
            android:id="@+id/update_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Update"/>
    </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>