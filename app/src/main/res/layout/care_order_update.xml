<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:elevation="20dp"
    app:cardElevation="20dp"
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_Id"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/cartUp_pdName"
                android:textColor="#151514"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:elevation="20dp"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rcipe Name"/>

            <TextView
                android:padding="5dp"
                android:id="@+id/cateUp_quaitiy"
                android:textColor="#151514"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:elevation="20dp"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_below="@+id/cartUp_pdName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"/>

        </LinearLayout>

        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:layout_centerInParent="true"
            android:layout_marginTop="17dp"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="8dp"
            app:textColor="@color/white"
            android:layout_below="@+id/layout_Id"
            app:initialNumber="1"
            app:textSize="10dp"
            android:id="@+id/upudate_Quantity"/>


        <info.hoang8f.widget.FButton
            android:layout_marginBottom="7dp"
            android:id="@+id/update_tbtn"
            fbutton:cornerRadius="15dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/upudate_Quantity"
            android:textColorHint="#EAEAE4"
            android:textColor="#E4E4DA"
            android:text="Update"
            android:textAllCaps="false"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>